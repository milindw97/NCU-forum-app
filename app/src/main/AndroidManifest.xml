<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mapps.attendancemanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".AttendanceActivity"
            android:label="My NCU"
            android:theme="@style/AppTheme" />
        <activity android:name=".LoginOption" />
        <activity android:name=".RegisterActivityStudent" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".NewTopic" />
        <activity android:name=".QuestionView" />
        <activity android:name=".DetailsActivity" />
        <activity
            android:name=".FacultyActivity"
            android:label="@string/title_activity_faculty"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>